<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.android.resume.Education"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="16dp"
    android:id="@+id/l1"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="13dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:src="@drawable/edit"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/edulayout1"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B.Tech (Hons.), Computer Science and Engineering (2015 - 2019)"
                android:textSize="14dp"
                android:fontFamily="serif"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:text="IIT (ISM), Dhanbad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:fontFamily="serif"
                />

            <TextView
                android:text="CGPA : 8.85/10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:fontFamily="serif"
                />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="16dp"
        android:layout_below="@+id/l1"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="13dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:id="@+id/edulayout2"
                android:orientation="vertical">




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XII (Senior Secondary), Science"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="serif"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <TextView
                    android:text="Year of Completion: 2015"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="12dp"
                    android:fontFamily="serif"
                    />

                <TextView
                    android:text="CBSE Board (Jawahar Navodaya Vidyalaya, Rangareddy)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="12dp"
                    android:fontFamily="serif"
                    />

                <TextView
                    android:text="Percentage : 96.40%"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="serif"
                    />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:tint="#ffffff"
        android:id="@+id/fab"
        android:src="@android:drawable/ic_input_add"
        />

</RelativeLayout>
